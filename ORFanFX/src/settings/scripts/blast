#!/usr/bin/env bash

if [ -z "$1" ]
  then
    echo "Input file must be specified."
    echo -e "Usage: extractIdsFromFasta input_file output_file\n \
	input_file should be in FASTA format."
    exit;
fi

if [ -z "$2" ]
  then
    echo "Output file must be specified"
    echo -e "Usage: extractIdsFromFasta input_file output_file\n \
        input_file should be in FASTA format."
    exit;
fi

cd workingdir
blastp -query chr21_1_13000000_genes.fasta -db uniprotkb_vertebrates_db.fa -outfmt 6 -max_target_seqs 1000000 -evalue 1e-3 -out human_chr21p_v.bl -num_threads 8
cd ..
